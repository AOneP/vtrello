<!DOCTYPE html>
<html>
  <head>
    <title>Vtrello</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/a8578bee81.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
  </head>

  <body class="background">
    <% if alert.present? %>
      <div class="alert alert-danger">  <%= alert %>  </div>
    <% end %>

    <% if notice.present? %>
      <div class="alert alert-success">
        <%= notice %>
      </div>
    <% end %>

    <div class="navbar-container">
      <div class="navbar-header-left">
        <div class="navbar-icons">
          <div class="icon-home">
            <i class="fas fa-home "></i>
          </div>
          <div class="icon-boards">
            <%= link_to boards_path do %>
              <i class="fas fa-border-all"></i> Boards
            <% end %>
          </div>
        </div>
      </div>

      <div class="navbar-header-center">
        <div class="logo">
          <%= image_tag("logotrello4.png", height: '30px') %>
        </div>
      </div>
      <div class="navbar-header-right">
        <div class="locals">
          <%= render partial: 'shared/locales' %>
        </div>
        <div class="icon-new-board">
          <%= link_to new_board_path do %>
            <i class="fas fa-plus"></i>
          <% end %>
        </div>
        <div class="icon-profile">
          <% if current_user.present? %>
            <%= link_to edit_user_path(current_user) do %>
              <i class="fas fa-user"></i>
            <% end %>
          <% end %>
        </div>
        <% if current_user %>
          <div class="icon-logout">
            <%= link_to session_path(current_user), method: :delete do %>
              <i class="fas fa-sign-out-alt"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
