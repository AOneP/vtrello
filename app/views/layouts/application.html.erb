<!DOCTYPE html>
<html>
  <head>
    <title>Vtrello</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if alert.present? %>
      <div class="alert alert-danger">  <%= alert %>  </div>
    <% end %>

    <% if notice.present? %>
      <div class="alert alert-success"> <%= notice %>  </div>
    <% end %>

    <% if current_user %>
      <%= link_to 'Wyloguj', session_path(current_user), method: :delete %>
      <%= link_to 'Edytuj konto', edit_user_path(current_user) %>
    <% end %>

    <%= render partial: 'shared/locales' %>
    <%= yield %>
  </body>
</html>
