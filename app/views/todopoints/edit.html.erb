<%= form_with(model: [@list, @todopoint], local: true) do |f| %>

  <%= f.label :body, 'Treść ToDoPointa' %>
  <%= f.text_field :body, value: @todopoint.body %>

  <%= f.label :done, 'Wykonane?' %>
  <%= f.select :done, [['Wykonane', true], ['Niewykonane', false]] %>

  <%= f.submit 'Aktualizuj ToDoPointa' %>

<% end %>
